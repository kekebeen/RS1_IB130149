@using  IB130149.Models;
@using  IB130149.Helper;
@model  IB130149.ViewModels.ProfileUpdateVm

@{
    ViewData["Title"] = "Update profile";
    Layout = "_Layout";
}


<div class="bg-white border rounded">
    <div class="row no-gutters">
        <div class="col-lg-4 col-xl-3">
            <div class="profile-content-left pt-5 pb-3 px-3 px-xl-3">
                <div class="card text-center widget-profile px-0 border-0">
                    <div class="card-img mx-auto rounded-circle">
                        <img src="https://sleek.tafcoder.com/assets/img/user/u6.jpg" alt="user-profile-image" />
                    </div>
                    <div class="card-body">
                        <h4 class="py-2 text-dark">@Model.Name @Model.Surname</h4>
                        <p>@Model.Email</p>
                    </div>
                </div>
                <hr class="w-100" />
                <div class="contact-info pt-4">
                    <h5 class="text-dark mb-1">Contact Information</h5>
                    <p class="text-dark font-weight-medium pt-4 mb-2">Email Address</p>
                    <p>@Model.Email</p>
                    <p class="text-dark font-weight-medium pt-4 mb-2">Phone Number</p>
                    <p>@Model.Telephone</p>
                </div>
            </div>
        </div><!-- profile sidebar -->
        <div class="col-lg-8 col-xl-9">
            <div class="profile-content-right py-5">
                <ul class="nav nav-tabs px-3 px-xl-5 nav-style-border" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="profile-tab" role="tab" aria-controls="profile-tab" aria-selected="true">Profile</a>
                    </li>
                </ul><!-- Tab navigation -->

                <div class="tab-content px-3 px-xl-5" id="myTabContent">
                    <div class="tab-pane fade active show" id="profile-tab" role="tabpanel" area-labelledby="profile-tab">
                        <div class="mt-5">
                            <partial name="/Views/Shared/Profile/_update.cshtml" model="@Model" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
