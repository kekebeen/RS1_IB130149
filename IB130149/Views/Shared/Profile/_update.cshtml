@model IB130149.ViewModels.ProfileUpdateVm;

    <form asp-action="Update" method="post">
        @Html.HiddenFor(m => m.UserId)

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Name" type="text" class="form-control input-lg" id="name" aria-describedby="nameHelp" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Surname" type="text" class="form-control input-lg" id="surname" aria-describedby="surnameHelp" placeholder="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Address" type="text" class="form-control input-lg" id="address" aria-describedby="addressHelp" placeholder="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Telephone" type="text" class="form-control input-lg" id="telephone" aria-describedby="telephoneHelp" placeholder="Telephone">
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Username" type="text" class="form-control input-lg" id="username" aria-describedby="usernameHelp" placeholder="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="Email" type="email" class="form-control input-lg" id="email" aria-describedby="emailHelp" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="OldPassword" type="password" class="form-control input-lg" id="oldPassword" aria-describedby="oldPasswordHelp" placeholder="Old password">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 mb-4">
                    <input asp-for="NewPassword" type="password" class="form-control input-lg" id="newPassword" aria-describedby="newPasswordHelp" placeholder="New password">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-5">
            <button type="submit" class="btn btn-primary mb-2 btn-pill">Update Profile</button>
        </div>
    </form>