@{ 
    string error_message = (string)TempData["error_message"];
    string success_message = (string)TempData["success_message"];
}

<!DOCTYPE html>
<html lang="en" dir="ltr">

<partial name="_Head" />

<body id="body">

    @if (error_message != null)
    {
        <div class="alert alert-dismissible fade-in-up show alert-danger mb-4 mt-4" role="alert">
            <i class="mdi mdi-alert mr-1"></i>
            @error_message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    @if (success_message != null)
    {
        <div class="alert alert-dismissible fade-in-up show alert-success mb-4 mt-4" role="alert">
            <i class="mdi mdi-alert mr-1"></i>
            @success_message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    <div class="container d-flex flex-column justify-content-between vh-100">
        <div class="row justify-content-center mt-5">
            <div class="col-xl-5 col-lg-6 col-md-10">
                @RenderBody()
            </div>
        </div>
        <div class="copyright pl-0">
            <p class="text-center">
                © 2020 Copyright
                <a class="text-primary" href="javascript:void(0)" target="_blank">IB130149</a>.
            </p>
        </div>
    </div>

    <partial name="_Scripts" />
</body>
</html>

